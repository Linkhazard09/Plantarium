<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plantarium.Settings"
             BackgroundColor="{DynamicResource AppBackgroundColor}"
             >
    <ContentPage.Resources>
        <ResourceDictionary Source="LightTheme.xaml"></ResourceDictionary>



    </ContentPage.Resources>
    
    
    <ContentPage.Content>

        <StackLayout>

            <Button Grid.Row="1"  x:Name="DarkThemeButton" BackgroundColor="{DynamicResource AppButtonColor}" TextColor="{DynamicResource AppButtonTextColor}"  Clicked="DarkThemeButton_Clicked" WidthRequest="100" HeightRequest="50"  HorizontalOptions="Center" VerticalOptions="Start" Text="Dark Theme"></Button>
            <Button Grid.Row="2"  x:Name="DefaultThemeButton" BackgroundColor="{DynamicResource AppButtonColor}" TextColor="{DynamicResource AppButtonTextColor}"  Clicked="DefaultThemeButton_Clicked" WidthRequest="100" HeightRequest="50" VerticalOptions="Start" HorizontalOptions="Center" Text="Default Theme"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>