<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plantarium.AddFeedbacks"
             BackgroundColor="{DynamicResource AppBackgroundColor}"
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame >
                    <Editor x:Name="Editor_FeedbackContent" Placeholder="Enter Your Feedback Content Here!" AutoSize="TextChanges" IsSpellCheckEnabled="false"  IsTextPredictionEnabled="false" BackgroundColor="LightGreen">
                   </Editor>
                </Frame>
                <Picker x:Name="Picker_Feedback" Title="Select a Rating!" TextColor="{DynamicResource AppLabelColor}" VerticalOptions="Center" HorizontalOptions="Center">
                 
                </Picker>
                <Button x:Name="SubmitButton" BackgroundColor="{DynamicResource AppButtonColor}" TextColor="{DynamicResource AppButtonTextColor}"  HorizontalOptions="CenterAndExpand" VerticalOptions="End" Text="Submit Feedback!"  Clicked="SubmitButton_Clicked"></Button>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>